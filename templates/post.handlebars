<article>
	<header>
		<h1>{{title}}</h1>
		<h2 class="category">{{category}}</h2>
		<time datetime="{{published}}">
			<span class="month"><abbr title="{{published-month}}">{{published-shortmonth}}</abbr></span>
			<span class="day">{{published-day}}</span>
		</time>
	</header>
	<p class="lead">
		{{lead}}
	</p>
	{{body}}
</article>